
@{
    ViewData["Title"] = "TaskIndex";
}

@model List<Tasks>
<h1>TaskIndex</h1>
<p class="text-danger">@ViewBag.TaskNotAdded</p>
@if (@Model.Count == 0)
{
    <p class="text-danger">Your tasklist is empty.</p>
    <p><a href="/Task/AddTask">Click here to add your first task!</a></p>
}
else
{
    <form action="/Task/SearchDescription" method="post">
        <input type="text" name="searchTerm" placeholder="Search" required />
        <input type="submit" />
    </form>
    <p><a href="/Task/ShowComplete">Show only completed tasks</a></p>
    <table width="50%">
        <tr>
            <th>
                Description
            </th>
            <th>
                Due Date
            </th>
            <th>
                Status
            </th>
            <th>
                Toggle Completion
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (Tasks t in Model)
        {
            <tr>
                <td>
                    @t.Description
                </td>
                <td>
                    @t.DueDate.ToShortDateString()
                </td>

                @if (t.Complete == true)
                {
                    <td>Complete</td>
                }
                else
                {
                    <td>Incomplete</td>
                }
                <td>
                    <form action="/Task/ToggleStatus?id=@t.Id" method="post">
                        <input type="submit" value="Change Status" />
                    </form>
                </td>
                <td>
                    <form action="/Task/DeleteTask?id=@t.Id" method="post">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </table>
    <p><a href="/Task/AddTask">Add another task.</a></p>

}
